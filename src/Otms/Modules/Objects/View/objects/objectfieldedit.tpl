{% if part.field %}<div><label>{{ part.field }}</label>{% if part.type == 2 %}<li><select style="{% if part.view.w %}width: {{ part.view.w }}px{% endif %}" name="{{ part.fid }}">{% for partdate in part.sel %}<option {% if partdate.val == part.val %}selected="selected"{% endif %}>{{ partdate.val }}</option>	{% endfor %}</select></li>{% elseif part.type == 1 %}<li><textarea name="{{ part.fid }}" style="{% if part.view.w %}width: {{ part.view.w }}px; {% endif %}{% if part.view.h %}height: {{ part.view.h }}px{% endif %}">{{ part.val }}</textarea></li>{% elseif part.type == 0 %}<li><input style="{% if part.view.w %}width: {{ part.view.w }}px{% endif %}" type="text" name="{{ part.fid }}" value="{{ part.val|e }}" /></li></div>{% endif %}{% endif %}